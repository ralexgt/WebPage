<p> Author: {{author}} </p>

<form action="newPost" method="POST">
  <p>
    <input
      type="text"
      name="title"
      placeholder="Title"
      maxlength="20"
      required
    />
  </p>
  <p>
    <input type="text" name="content" placeholder="blog content" />
  </p>
  <input type="submit" value="Publish" />
</form>