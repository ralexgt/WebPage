{
  "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "rootDir": "./src",
      "strict": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true
  },
  "exclude": [
      "node_modules"
  ]
}